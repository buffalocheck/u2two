<h1>Log In Page</h1>
<form action="/auth/login" method="POST" role="form">
	<!-- <legend>Form title</legend> -->

	<div class="form-group">
		<label for="login">Email</label>
		<input type="text" class="form-control" id="login" name="email" placeholder="Type your email, yo!">
	</div>

<div class="form-group">
		<label for="password">Password</label>
		<input type="password" class="form-control" id="password" name="password" placeholder="Type your password, yo!">
	</div>

	<button type="submit" class="btn btn-primary">Submit</button>
</form>

<hr>
<h2>Or...</h2>
<a href="/auth/facebook" class="btn btn-primary">Login with Facebook</a>
